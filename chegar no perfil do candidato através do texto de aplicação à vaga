[18:10, 30/01/2025] ...: <?php
function analisarCandidato($texto) {
    
    $experiencia = ['anos de experiência', 'trabalhei em', 'experiência em', 'atuei como', 'empresa', 'projeto'];
    $habilidades = ['PHP', 'JavaScript', 'MySQL', 'HTML', 'CSS', 'framework', 'Laravel', 'Python', 'React', 'Node.js', 'comunicação', 'trabalho em equipe'];
    $educacao = ['graduação', 'formado em', 'bacharel', 'mestre', 'certificação', 'curso técnico', 'especialização'];
    $motivacao = ['interesse em', 'desejo contribuir', 'objetivo', 'motivado por', 'apaixonado por', 'entusiasmo'];

    $perfil = [
        'Experiência' => [],
        'Habilidades' => [],
        'Educação' => [],
        'Motivação' => []
    ];


    foreach ($experiencia as $palavra) {
        if (stripos($texto, $palavra) !== false) {
            $perfil['Experiência'][] = $palavra;
        }
    }
    foreach ($habilidades as $palavra) {
        if (stripos($texto, $palavra) !== false) {
            $perfil['Habilidades'][] = $palavra;
        }
    }
    foreach ($educacao as $palavra) {
        if (stripos($texto, $palavra) !== false) {
            $perfil['Educação'][] = $palavra;
        }
    }
    foreach ($motivacao as $palavra) {
        if (stripos($texto, $palavra) !== false) {
            $perfil['Motivação'][] = $palavra;
        }
    }

    return $perfil;
}


if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $textoCandidato = $_POST['textoCandidato'];
    $perfilCandidato = analisarCandidato($textoCandidato);
}
?>

<!DOCTYPE html>
<html lang="pt">
